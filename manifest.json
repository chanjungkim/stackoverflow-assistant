{
    "manifest_version": 2,
    "name": "Stackoverflow Assistant",
    "description": "Extension for Stackoverflow.",
    "version": "1.0",
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },

    "background": {
        "scripts": ["jquery-3.3.1.min.js"],
        "persistent": false
    },

    "content_scripts": [{
        "matches": [
            "https://stackoverflow.com/questions/ask"
        ],
        "css": [
            "core.css"
        ],
        "js": [
            "jquery-3.3.1.min.js", "core.js"
        ],
        "urn_at": "document_end",
        "all_frames": true
    }],

    "browser_action":{
        "default_icon":"icon16.png",
        "default_popup":"/popup/popup.html",
        "default_title":"Stackoverflow Assistant"
    },

    "permissions": [
            "contextMenus",
            "tabs",
            "storage",
            "activeTab"
        ]
    }
